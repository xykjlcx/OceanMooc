<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:orientation="vertical"
    app:cardUseCompatPadding="true"
    app:cardCornerRadius="10dp"
    app:cardPreventCornerOverlap="true"
    app:layout_scrollFlags="scroll"
    app:cardElevation="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f0f2f0">

        <TextView
            android:id="@+id/tv_my_course_last_time"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="5dp"
            android:layout_alignParentTop="true"
            android:paddingLeft="@dimen/global_default_left_padding_size"
            android:gravity="center_vertical"
            android:textColor="@android:color/black"
            android:text="LastTime：2018-08-05"/>

        <ImageView
            android:id="@+id/iv_my_course_img"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/a2"
            android:layout_below="@+id/tv_my_course_last_time"/>

        <TextView
            android:id="@+id/tv_my_course_name"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="课程名称：vue小程序开发"
            android:textColor="@android:color/black"
            android:gravity="center_vertical"
            android:layout_marginRight="5dp"
            android:layout_toRightOf="@+id/iv_my_course_img"
            android:layout_alignTop="@+id/iv_my_course_img"/>

        <TextView
            android:id="@+id/tv_my_course_teacher"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginRight="5dp"
            android:gravity="center_vertical"
            android:text="授课教师：李长昕"
            android:textColor="@android:color/black"
            android:layout_toRightOf="@+id/iv_my_course_img"
            android:layout_below="@+id/tv_my_course_name"/>

        <TextView
            android:id="@+id/tv_my_course_duration"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="时长：38:57"
            android:textSize="12dp"
            android:layout_marginRight="5dp"
            android:layout_toRightOf="@+id/iv_my_course_img"
            android:layout_below="@+id/tv_my_course_teacher"/>

    </RelativeLayout>



</android.support.v7.widget.CardView>