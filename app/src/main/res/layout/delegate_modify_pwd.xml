<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <View
        android:id="@+id/view_modify_pwd_fill"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="修改密码"
        android:gravity="center_vertical"
        android:textColor="@android:color/black"
        android:textSize="23sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:background="#f3f4f3"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f3f4f3"
        android:text="数据校验"
        android:textSize="15sp"
        android:paddingLeft="20dp"
        android:paddingVertical="@dimen/global_default_margin_size"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#f3f4f3">

        <RelativeLayout
            android:id="@+id/layout_modify_pwd_oldpwd"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="#ffffff"
            android:paddingRight="20dp">

            <TextView
                android:id="@+id/tv_modify_pwd_oldpwd_label"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:text="原密码"
                android:textSize="15sp"
                android:gravity="center_vertical"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:layout_alignParentLeft="true"/>

            <EditText
                android:id="@+id/et_modify_pwd_oldpwd"
                android:background="@null"
                android:singleLine="true"
                android:maxLines="1"
                android:inputType="textPassword"
                android:textSize="16sp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_toRightOf="@+id/tv_modify_pwd_oldpwd_label"
                android:layout_centerVertical="true"
                android:hint="请输入原始密码"
                android:textColor="@android:color/black"
                android:paddingLeft="30dp"
                android:gravity="center_vertical"/>

        </RelativeLayout>

        <include layout="@layout/include_view_line"/>

        <RelativeLayout
            android:id="@+id/layout_modify_pwd_newpwd"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="#ffffff"
            android:paddingRight="20dp">

            <TextView
                android:id="@+id/tv_modify_pwd_newpwd_label"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:text="新密码"
                android:textSize="15sp"
                android:gravity="center_vertical"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:layout_alignParentLeft="true"/>

            <EditText
                android:id="@+id/et_modify_pwd_newpwd"
                android:background="@null"
                android:singleLine="true"
                android:maxLines="1"
                android:inputType="textPassword"
                android:textSize="16sp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_toRightOf="@+id/tv_modify_pwd_newpwd_label"
                android:layout_centerVertical="true"
                android:hint="请输入新密码"
                android:textColor="@android:color/black"
                android:paddingLeft="30dp"
                android:gravity="center_vertical"/>

        </RelativeLayout>

        <include layout="@layout/include_view_line"/>

        <RelativeLayout
            android:id="@+id/layout_modify_pwd_affirm"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="#ffffff"
            android:paddingRight="20dp">

            <TextView
                android:id="@+id/tv_modify_pwd_affirm_label"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:text="确认密码"
                android:textSize="15sp"
                android:gravity="center_vertical"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:layout_alignParentLeft="true"/>

            <EditText
                android:id="@+id/et_modify_pwd_affirm"
                android:background="@null"
                android:singleLine="true"
                android:maxLines="1"
                android:inputType="textPassword"
                android:textSize="16sp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="请确认输入新密码"
                android:layout_toRightOf="@+id/tv_modify_pwd_affirm_label"
                android:layout_centerVertical="true"
                android:textColor="@android:color/black"
                android:paddingLeft="30dp"
                android:gravity="center_vertical"/>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:background="#f3f4f3"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#f3f4f3"
            android:text="请仔细检查您的输入！"
            android:textSize="15sp"
            android:paddingLeft="20dp"
            android:paddingVertical="@dimen/global_default_margin_size"/>

        <TextView
            android:id="@+id/tv_modify_pwd_ok"
            android:layout_width="match_parent"
            android:layout_marginVertical="50dp"
            android:layout_height="50dp"
            android:layout_marginHorizontal="10dp"
            android:background="@drawable/shape_circular_login"
            android:text="修改密码"
            android:textSize="15sp"
            android:textColor="@android:color/white"
            android:gravity="center"/>


    </LinearLayout>


</LinearLayout>