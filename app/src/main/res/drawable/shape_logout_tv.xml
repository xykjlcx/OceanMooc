<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:state_pressed="false">
        <shape>
            <stroke
                android:width="0.5sp"
                android:color="#b8b9b8"/>
            <solid
                android:color="#f6f7f6"/>
        </shape>
    </item>

    <item
        android:state_pressed="true">
        <shape>
            <stroke
                android:width="0.5sp"
                android:color="#b8b9b8"/>
            <solid
                android:color="#ced1ce"/>
        </shape>
    </item>


</selector>