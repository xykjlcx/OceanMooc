<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/layout_main_container"
        android:layout_width="match_parent"
        android:layout_marginBottom="@dimen/main_delegate_bottom_bar_height"
        android:layout_height="match_parent"/>

    <com.roughike.bottombar.BottomBar
        android:id="@+id/bottombar_main"
        android:layout_width="match_parent"
        android:layout_height="@dimen/main_delegate_bottom_bar_height"
        android:layout_gravity="bottom"
        app:bb_badgeBackgroundColor="#00FF00"
        app:bb_tabXmlResource="@xml/bottombar_tabs"/>

</FrameLayout>