<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:orientation="vertical"
    app:cardUseCompatPadding="true"
    app:cardCornerRadius="5dp"
    app:cardPreventCornerOverlap="true"
    app:layout_scrollFlags="scroll"
    app:cardElevation="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff">


        <TextView
            android:id="@+id/tv_my_course_last_time"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:gravity="center_vertical"
            android:text="1970-01-06 11:45:55"
            android:textColor="#b0b1b0"
            android:layout_marginRight="10dp"
            android:textSize="10sp"
            android:layout_marginBottom="@dimen/global_default_margin_size"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"/>


        <TextView
            android:id="@+id/tv_my_course_last_time_label"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:gravity="center_vertical"
            android:text="最后学习时间： "
            android:textSize="10sp"
            android:textStyle="bold"
            android:textColor="#b0b1b0"
            android:layout_toLeftOf="@id/tv_my_course_last_time"
            android:layout_alignBottom="@+id/tv_my_course_last_time"/>


        <ImageView
            android:id="@+id/iv_my_course_img"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:scaleType="centerCrop"/>


        <TextView
            android:id="@+id/tv_my_course_name"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:text="课程名称：vue小程序开发"
            android:textColor="#2a3849"
            android:textStyle="bold"
            android:layout_marginLeft="@dimen/global_default_margin_size"
            android:gravity="center_vertical"
            android:layout_below="@+id/iv_my_course_img"/>

        <TextView
            android:id="@+id/tv_my_course_study_section"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/global_default_margin_size"
            android:gravity="center_vertical"
            android:text="学习至章节："
            android:textColor="#80ef80"
            android:layout_below="@+id/tv_my_course_name"/>

        <TextView
            android:id="@+id/tv_my_course_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/global_default_margin_size"
            android:text="课程时长时长：38:57"
            android:layout_alignBottom="@id/tv_my_course_last_time"
            android:gravity="center_vertical"
            android:textSize="12dp"
            android:layout_below="@+id/tv_my_course_study_section"/>

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@mipmap/studying"
            android:layout_above="@id/tv_my_course_last_time"
            android:layout_alignParentRight="true"
            android:layout_marginRight="30dp"/>


    </RelativeLayout>



</android.support.v7.widget.CardView>