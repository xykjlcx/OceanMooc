<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:state_pressed="false">
        <shape>
            <stroke
                android:width="0.5sp"
                android:color="#b8b9b8"/>
            <solid
                android:color="#8ed18e"/>
        </shape>
    </item>

    <item
        android:state_pressed="true">
        <shape>
            <stroke
                android:width="0.5sp"
                android:color="#b8b9b8"/>
            <solid
                android:color="#3ede3e"/>
        </shape>
    </item>


</selector>